<h1><%= @post.title %></h1>
<ul>
<% @post.categories.each do |cat| %>
    <li><%= cat.name %></li>
<% end %>
</ul>
<p><%= @post.content %></p>
<div>
<%= form_for(@comment) do |f| %>
    <%= f.collection_select :comment_ids, User.all, :id, :username %>
    <%= f.text_area :comment_content %><br>
    <%= f.hidden_field :post_id, :value => @post.id %>
    <%= f.submit %>
<% end %>





